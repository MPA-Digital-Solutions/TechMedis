
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product {
  id              String   @id @default(cuid())
  name            String   @db.VarChar(255)
  slug            String   @unique @db.VarChar(255)
  description     String   @db.Text
  status          String   @default("active") @db.VarChar(50) // Valores: "active", "inactive"
  category        String   @db.VarChar(100) // Valores permitidos: "clinico", "veterinario"
  subcategory     String?  @db.VarChar(255) // Slug de la subcategoría nivel 1 (ej: "digitalizacion-por-imagenes")
  subcategory2    String?  @db.VarChar(255) // Slug de la subcategoría nivel 2 (ej: "digitalizacion-directa")
  image           String?  @db.VarChar(255) // Ruta a la imagen en carpeta public
  
  metadata        Json     @default("{}")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([category])
  @@index([status])
  @@index([category, status])
  @@index([subcategory])
  @@index([subcategory2])
}

model Config {
  id        String   @id @default(cuid())
  key       String   @unique @db.VarChar(100)
  value     String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([key])
}

model Client {
  id        String   @id @default(cuid())
  name      String   @db.VarChar(255)
  email     String?  @db.VarChar(255)
  phone     String?  @db.VarChar(50)
  company   String?  @db.VarChar(255)
  message   String   @db.Text
  source    String   @default("contact_form") @db.VarChar(100) // contact_form, whatsapp, etc.
  status    String   @default("pending") @db.VarChar(50) // pending, contacted, converted
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status])
  @@index([createdAt])
}
